<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="bib_book_tree_view" model="ir.ui.view">
			<field name="name">book.tree</field>
			<field name="model">bib.book</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Book">
					<field name="fields_Title"/>
					<field name="fields_Screen_cover"/>
					<field name="fields_Publishing_date"/>
					<field name="fields_Editing"/>
					<field name="fields_Page_count"/>
					<field name="fields_Bar_code"/>
					<field name="fields_ISBN"/>
					<field name="fields_Format"/>
					<field name="fields_Pice"/>
				</tree>
			</field>
		</record>



		<record id="bib_book_form_view" model="ir.ui.view">
			<field name="name">book.form</field>
			<field name="model">bib.book</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Book">
					<sheet>
					<group>
						<field name="fields_Title"/>
						<field name="fields_Screen_cover"/>
						<field name="fields_Publishing_date"/>
						<field name="fields_Editing"/>
					</group>
					<group>
						<field name="fields_Page_count"/>
						<field name="fields_Bar_code"/>
						<field name="fields_ISBN"/>
						<field name="fields_Format"/>
						<field name="fields_Pice"/>
					</group>
					</sheet>
				</form>
			</field>
		</record>


		

		<record id="bib_book_action" model="ir.actions.act_window">
			<field name="name">Book</field>
			<field name="res_model">bib.book</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="book_root" name="Book" web_icon='bc-bib,static/description/icon.png'>
			<menuitem id="book_first_level" name="First level">
					<menuitem id="book_menu_action" action="bib_book_action" />
			</menuitem>
		</menuitem>

	</data>
</odoo>
