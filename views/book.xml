<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>

<!-- Vue Book -->

		<!--tree ecran de depart-->
		<record id="bib_book_tree_view" model="ir.ui.view">
			<field name="name">book.tree</field>
			<field name="model">bib.book</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Book">
					<field name="fields_Title"/>
					<field name="fields_Screen_cover"/>
					<field name="fields_Publishing_date"/>
					<field name="fields_Editing"/>
					<field name="fields_Page_count"/>
					<field name="fields_Bar_code"/>
					<field name="fields_ISBN"/>
					<field name="fields_Format"/>
					<field name="fields_Pice"/>
					<field name="langue_id"/>
					<field name="evaluation_id"/>
				</tree>
			</field>
		</record>


		<!--form pour crÃ©er un livre-->
		<record id="bib_book_form_view" model="ir.ui.view">
			<field name="name">book.form</field>
			<field name="model">bib.book</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Book">
					<sheet>
						<group>
							<field name="fields_Title"/>
							<field name="fields_Screen_cover"/>
							<field name="fields_Publishing_date"/>
							<field name="fields_Editing"/>
							<field name="fields_Page_count"/>
							<field name="fields_Bar_code"/>
							<field name="fields_ISBN"/>
							<field name="fields_Format"/>
							<field name="fields_Pice"/>
							<field name="langue_id"/>
						</group>
					</sheet>
					<sheet>
						<group>
							<field name="evaluation_id"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>


<!-- Vue langue -->
		<!-- form -->
		<record id="bib_langue_form" model="ir.ui.view">
			<field name="name">langue.form</field>
			<field name="model">bib.langue</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Langue">
					<sheet>
						<!-- Smart Button -->
						<div class="oe_button_box" name="button_box">
							<!-- Le name du button = nom de la fonction
							name="dummy" devient name="books_by_languages"
							-->
							<button class="oe_stat_button" name="books_by_languages" type="object" icon="fa-book">
								<div class="o_stat_info">
									<span class="o_stat_value">
										<field name="count_book" />
									</span>
									<span class="o_stat_text">
										Livres
									</span>
								</div>
							</button>

						</div>
						<group>
							<field name="Fields_langue" />
							<field name="ids_book" />
							<field name="count_book" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!--Tree-->
		<record id="bib_langue_tree" model="ir.ui.view">
			<field name="name">langue.tree</field>
			<field name="model">bib.langue</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Langue">
					<field name="Fields_langue" />
					<field name="ids_book" />
				</tree>
			</field>
		</record>

<!-- Record/action -->
		<!-- Record/action book -->
		<record id="bib_book_action" model="ir.actions.act_window">
			<field name="name">Book</field>
			<field name="res_model">bib.book</field>
			<field name="view_mode">tree,form</field>
		</record>


		<!-- Record/Action Langue -->
		<record id="bib_book_afficher_langue" model="ir.actions.act_window">

			<field name="name">Langue</field>
			<!-- Ressource model : bib.langue-->
			<field name="res_model">bib.langue</field>
			<!-- View mode (quelle vue on veut afficher sans espace entre les ,)-->
			<field name="view_mode">tree,form</field>

		</record>

		<record id="bib_genre_afficher_genre" model="ir.actions.act_window" >
			<field name="name">Genre</field>
			<field name="res_model">bib.genre</field>
			<field name="view_mode">tree,form</field>
		</record>


<!-- Menu dans la barre de navigation -->
		<menuitem id="book_root" name="Book" web_icon='bc-bib,static/description/icon.png'>
			<menuitem id="book_first_level" name="Boukin">
					<menuitem id="book_menu_action" action="bib_book_action" />
					<!--Action !  a lier avec record id = "..."-->
					<menuitem id="book_menu_langue" action="bib_book_afficher_langue" />

					
			</menuitem>



		</menuitem>


		<menuitem id="book_menu_genre" action="bib_genre_afficher_genre" parent="book_first_level" />

	</data>
</odoo>
